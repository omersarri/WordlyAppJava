<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/secondary_dark</item>
        <item name="colorOnPrimary">@color/lightGray</item>

        <item name="colorSecondary">@color/tertiary_dark</item>
        <item name="colorSecondaryVariant">@color/tertiary_dark</item>
        <item name="colorOnSecondary">@color/lightGray</item>
        <item name="android:windowBackground">@color/charcoal</item>


        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <style name="CardBackground"><item name="android:backgroundTint">@color/secondary_dark</item></style>
    <style name="SplashBackground"><item name="android:background">@color/secondary_dark</item></style>
    <style name="TextColor"><item name="android:textColor">@color/lightGray</item></style>
    <style name="TitleTextColor"><item name="android:textColor">@color/background_dark</item></style>
    <style name="SmallTitleTextColor"><item name="android:textColor">@color/tertiary_dark</item></style>
    <style name="NavHeaderBackground">
        <item name="android:backgroundTint">@color/primary_dark</item>
        <item name="android:background">@drawable/toolbar_shape</item>
    </style>

    <style name="IconBackground">
        <item name="android:backgroundTint">@color/tertiary_dark</item>
    </style>
    <style name="IconTint">
        <item name="android:tint">@color/tertiary_dark</item>
    </style>


    <style name="BottomNavigationViewStyle.Dark" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/secondary_dark</item>
        <item name="itemTextColor">@color/lightGray</item>
        <item name="itemIconTint">@color/lightGray</item>

    </style>

    <style name="TrainingTestButtons" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@drawable/outline</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>