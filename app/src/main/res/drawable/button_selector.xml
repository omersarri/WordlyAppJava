<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/primaryColor" /> <!-- Tıklanmış durum için renk -->
            <corners android:radius="15dp" />
        </shape>
    </item>
    <item android:state_selected="false">
        <shape>
            <solid android:color="@color/secondaryColor" /> <!-- Normal durum için renk -->
            <corners android:radius="15dp" />
        </shape>
    </item>
</selector>